# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                           controllers.Application.index

# Load test
GET     /load/run                   controllers.LoadTestController.run
GET     /chart/pie                  controllers.ChartController.pie

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.versioned(path="/public", file: Asset)

# Xml reqeusts
GET     /xml/get/:name                   controllers.FileController.getFile(name:String)
GET     /file/get/:name                   controllers.FileController.getFile(name:String)
GET     /xml/:name                   controllers.FileController.loadFile(name:String)
GET     /file/:name                   controllers.FileController.loadFile(name:String)

# Response
GET     /response/all                   controllers.ResponseController.all(namePrefix:String)

# Booking
POST     /booking                   controllers.AsyncController.booking

# Websocket test site
GET   /ws/socket         controllers.WebsocketController.socket
GET   /ws/sender         controllers.WebsocketController.sender
GET   /ws/broadcast         controllers.WebsocketController.broadcast
GET   /ws/broadcast1         controllers.WebsocketController.broadcast1
GET   /ws/broadcast3         controllers.WebsocketController.broadcast3
#https://github.com/fdimuccio/play2-sockjs
#->   /ws/broadcast4         controllers.WebsocketController.broadcastSockJS
#->   /ws/broadcast4         controllers.WebsocketController.sockjs